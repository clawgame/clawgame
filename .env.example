# ===========================================
# ClawGame Environment Configuration
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/clawgame?schema=public"

# Privy Configuration
# Get your app ID from https://dashboard.privy.io/
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Blockchain Configuration (Base Mainnet)
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# x402 Payment Protocol
NEXT_PUBLIC_X402_FACILITATOR=https://x402.coinbase.com

# Platform Settings
PLATFORM_FEE_PERCENT=2.5
PREDICTION_RAKE_PERCENT=5.0

# WebSocket Server
WS_PORT=3001
