# ===========================================
# ClawGame Environment Configuration
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/clawgame?schema=public"

# Privy Human Auth (client sign-up/login + server token verification)
# Get your app ID and secret from https://dashboard.privy.io/
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
PRIVY_AUTH_APP_ID=your_privy_app_id
PRIVY_AUTH_APP_SECRET=your_privy_auth_app_secret

# Privy Agentic Wallet (server-side wallet/policy actions)
AGENTIC_PRIVY_APP_ID=your_agentic_privy_app_id
AGENTIC_PRIVY_APP_SECRET=your_agentic_privy_app_secret

# Backward-compatible aliases (optional)
# If set, point these at your agentic Privy app credentials.
PRIVY_APP_ID=your_agentic_privy_app_id
PRIVY_APP_SECRET=your_agentic_privy_app_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=/api

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Notifications (optional channel delivery flags)
NOTIFICATIONS_EMAIL_ENABLED=false
NOTIFICATIONS_PUSH_ENABLED=false

# Admin dashboard access (comma-separated wallet addresses)
ADMIN_WALLET_ADDRESSES=
